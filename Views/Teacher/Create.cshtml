@model StudentGradeManagementSystem.Models.Teacher

@{ ViewData["Title"] = "添加教师"; }

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="fas fa-user-tie"></i> 添加教师</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger fw-bold" role="alert"></div>
                        
                        <div class="mb-3">
                            <label asp-for="TeacherName" class="form-label"><i class="fas fa-user"></i> 教师姓名</label>
                            <input asp-for="TeacherName" class="form-control" placeholder="请输入教师姓名" />
                            <span asp-validation-for="TeacherName" class="text-danger"></span>
                        </div>
                        
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> 返回教师列表
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> 保存教师
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}