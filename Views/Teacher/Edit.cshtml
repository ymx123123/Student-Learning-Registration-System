@model StudentGradeManagementSystem.Models.Teacher

@{ ViewData["Title"] = "编辑教师"; }

<h2 class="mb-4">编辑教师</h2>

<form asp-action="Edit" class="border p-4 rounded bg-light shadow-sm">
    <input type="hidden" asp-for="TeacherID" />
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
    <div class="mb-3">
        <label asp-for="TeacherName" class="form-label">姓名</label>
        <input asp-for="TeacherName" class="form-control" />
        <span asp-validation-for="TeacherName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">保存</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">返回列表</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}