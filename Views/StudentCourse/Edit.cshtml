@model StudentGradeManagementSystem.Models.StudentCourse

@{
    ViewData["Title"] = "编辑选课";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>编辑选课</h1>

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-edit"></i>
        编辑选课记录
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EnrollmentID" />
            
            <div class="form-group mb-3">
                <label asp-for="StudentID" class="control-label">学生</label>
                <select asp-for="StudentID" class="form-control" asp-items="ViewBag.StudentList">
                    <option value="">-- 请选择学生 --</option>
                </select>
                <span asp-validation-for="StudentID" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="CourseID" class="control-label">课程</label>
                <select asp-for="CourseID" class="form-control" asp-items="ViewBag.CourseList">
                    <option value="">-- 请选择课程 --</option>
                </select>
                <span asp-validation-for="CourseID" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="保存" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">返回列表</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}