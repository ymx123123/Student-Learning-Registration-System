@model StudentGradeManagementSystem.Models.Student

@{ ViewData["Title"] = "添加学生"; }

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary"><i class="fas fa-user-plus"></i> 添加学生</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> 返回列表
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-user-graduate"></i> 学生信息</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger fw-bold" role="alert"></div>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="StudentName" class="form-label">
                            <i class="fas fa-user text-muted"></i> 学生姓名
                        </label>
                        <input asp-for="StudentName" class="form-control" placeholder="请输入学生姓名" />
                        <span asp-validation-for="StudentName" class="text-danger"></span>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label asp-for="Gender" class="form-label">
                            <i class="fas fa-venus-mars text-muted"></i> 性别
                        </label>
                        <select asp-for="Gender" class="form-select">
                            <option value="">请选择性别</option>
                            <option value="男">男</option>
                            <option value="女">女</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="BirthDate" class="form-label">
                            <i class="fas fa-birthday-cake text-muted"></i> 出生日期
                        </label>
                        <input asp-for="BirthDate" class="form-control" type="date" />
                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label asp-for="ClassID" class="form-label">
                            <i class="fas fa-users text-muted"></i> 班级
                        </label>
                        <select asp-for="ClassID" class="form-select">
                            <option value="">请选择班级</option>
                            @foreach (var classItem in ViewBag.Classes as List<StudentGradeManagementSystem.Models.Class>)
                            {
                                <option value="@classItem.ClassID">@classItem.ClassName</option>
                            }
                        </select>
                        <span asp-validation-for="ClassID" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-times"></i> 取消
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> 保存学生
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}